<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPostActivity">

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="10dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/volver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar Nuevo Post"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/crearButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Publicar"
            android:background="@drawable/backgorund_c"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:hint="Introduce el titulo"
        android:padding="12dp"
        android:textSize="20sp"
        android:layout_below="@id/bottomBar"
        android:background="@drawable/background_e"
        android:layout_marginTop="16dp"
        android:maxLines="1"

        />

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="390dp"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        android:hint="Descripcion"
        android:gravity="top"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/background_e"
        android:layout_below="@id/titleEditText"
        android:layout_marginTop="12dp"

        />

</RelativeLayout>