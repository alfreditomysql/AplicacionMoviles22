<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditPostActivity">

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="10dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/volver"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar Post"
            android:textColor="@color/black"
            android:layout_marginTop="6dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editarButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="3dp"
            android:hint="Editar"
            android:background="@drawable/background_button_elegante"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>



    <EditText
        android:id="@+id/updateTitleEditText"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_below="@id/bottomBar"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_elegante"
        android:hint="Introduce el titulo"
        android:maxLines="1"
        android:padding="12dp"
        android:textSize="18sp"
        />

    <Spinner
        android:id="@+id/categoria"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateTitleEditText"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_focus"
        android:padding="12dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/contentEditText"
        android:layout_width="390dp"
        android:layout_height="400dp"
        android:layout_below="@id/categoria"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/background_focus"
        android:gravity="top"
        android:hint="Descripcion"
        android:padding="12dp"
        android:textSize="18sp"/>


</RelativeLayout>