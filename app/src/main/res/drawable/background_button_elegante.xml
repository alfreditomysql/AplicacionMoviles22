<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#4395EC"/> <!-- Color when pressed -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#5D91CA"/> <!-- Color when focused -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#8EC1E4"/> <!-- Default color -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>
